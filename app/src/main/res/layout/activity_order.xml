<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.registration.order.OrderActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/YellowLight"
        android:padding="5dp"
        android:text=" 请确保挂号人为本人，信息请按真实信息填写。"
        android:textSize="@dimen/text_font_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_reg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约时间"
            android:textSize="@dimen/text_font" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GreenLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约医生     "
            android:textSize="@dimen/text_font" />
        <TextView
            android:id="@+id/tv_reg_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医生姓名"
            android:textSize="@dimen/text_font_middle" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/GrayLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约科室     "
            android:textSize="@dimen/text_font" />
        <TextView
            android:id="@+id/tv_reg_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科室名"
            android:textSize="@dimen/text_font_middle" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GreenLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊人     "
            android:textSize="@dimen/text_font" />
        <TextView
            android:id="@+id/tv_reg_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊人姓名"
            android:textSize="@dimen/text_font_middle" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/GrayLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别     "
            android:textSize="@dimen/text_font" />
        <TextView
            android:id="@+id/tv_reg_psex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊人性别"
            android:textSize="@dimen/text_font_middle" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/GrayLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄     "
            android:textSize="@dimen/text_font" />
        <TextView
            android:id="@+id/tv_reg_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊人年龄"
            android:textSize="@dimen/text_font_middle" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/GrayLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码     "
            android:textSize="@dimen/text_font" />
        <TextView
            android:id="@+id/tv_reg_ptel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊人手机号"
            android:textSize="@dimen/text_font_middle" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/GrayLight"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码     "
                android:textSize="@dimen/text_font" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textSize="@dimen/text_font_middle" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="5dp"
            android:layout_weight="2">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="@dimen/text_font_small"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/GrayLight"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即预约"
            android:textColor="@color/White"
            android:background="@color/GreenLight"
            android:textSize="@dimen/text_font_middle"/>
    </LinearLayout>


</LinearLayout>